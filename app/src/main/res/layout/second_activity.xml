<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.placesadd.SecondActivity">

    <TextView
        android:id="@+id/viewText"
        android:layout_width="377dp"
        android:layout_height="226dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:maxLines="20"
        android:scrollbars="vertical"
        android:text="Data is Empty"
        android:textSize="11sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/delBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:onClick="saveIndex"
        android:text="Delete "
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/viewText"
        android:layout_marginEnd="16dp" />

    <EditText
        android:id="@+id/index"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Enter number to delete"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/delBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/delBtn"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginEnd="8dp" />

</android.support.constraint.ConstraintLayout>
